<UserControl x:Class="ProSuite.AGP.Solution.WorkListUI.Views.IssueCountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:workListUi="clr-namespace:ProSuite.AGP.Solution.WorkListUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=workListUi:IssueWorkListViewModel}">
    <Grid>
        <DockPanel LastChildFill="True" >
            <Label Content="{Binding Count}" DockPanel.Dock="Right"></Label>
            <Label Content="{Binding CurrentItemViewModel.Description}" />
        </DockPanel>
    </Grid>
</UserControl>
