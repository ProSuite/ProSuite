@using Radzen.Blazor
@inherits TestParameterValueBlazorBase<int>

<Validation ErrorMessage="@ErrorMessage">
	@if (ViewModel.Editing)
	{
		<RadzenDropDown TValue="int" @bind-Value="IntValue" Data="@IntValues">
			<Template Context="value">
				@Enum.ToObject(DataType, value)
			</Template>
		</RadzenDropDown>
	}
	else
	{
		@Enum.ToObject(DataType, IntValue)
	}
</Validation>
