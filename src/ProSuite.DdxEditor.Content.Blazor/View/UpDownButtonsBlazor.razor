@using Radzen
@using Radzen.Blazor

<div class="col-auto">
	<div class="col">
		<RadzenButton ButtonStyle="ButtonStyle.Light" Click="UpClicked" Disabled="UpButtonDisabled()" Style="background-color: #e1e1e1; border: 1px solid #adadad; border-radius: 0; height: 20px ! important; padding: 0 8px ! important;">
			<img src="images/UpArrow.png" class="ui-image"/>
		</RadzenButton>
	</div>
	<div class="col">
		<RadzenButton ButtonStyle="ButtonStyle.Light" Click="DownClicked" Disabled="DownButtonDisabled()" Style="background-color: #e1e1e1; border: 1px solid #adadad; border-radius: 0; height: 20px ! important; padding: 0 8px ! important;">
			<img src="images/DownArrow.png" class="ui-image"/>
		</RadzenButton>
	</div>
	<div class="col">
		<RadzenButton ButtonStyle="ButtonStyle.Light" Click="DeleteRowClicked" Disabled="DeleteRowButtonDisabled()" Style="background-color: #e1e1e1; border: 1px solid #adadad; border-radius: 0; height: 20px ! important; padding: 0 8px ! important;">
			<img src="images/Remove.png" class="ui-image"/>
		</RadzenButton>
	</div>
</div>
