<UserControl x:Class="ProSuite.AGP.Editing.ChangeAlong.DockPaneCutAlong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             xmlns:changealong="clr-namespace:ProSuite.AGP.Editing.ChangeAlong"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=changealong:DockPaneCutAlongViewModelBase}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel
        HorizontalAlignment="Left"
        VerticalAlignment="Top" Width="Auto">

        <CheckBox Content="Insert vertices on targets for topological correctness"
                  IsChecked="{Binding Path=Options.CentralizableInsertVertices.CurrentValue}" />

        <!-- Restore Defaults -->
        <Button Content="Restore Defaults" 
                Command="{Binding Path=Options.RevertToDefaultsCommand}"
                Margin="5"/>

    </StackPanel>
</UserControl>
