<UserControl x:Class="ProSuite.AGP.Editing.MergeOperationSurvivorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProSuite.AGP.Editing"
             xmlns:managedOptionsUi="clr-namespace:ProSuite.Commons.UI.ManagedOptions;assembly=ProSuite.Commons.UI"
             xmlns:merge="clr-namespace:ProSuite.AGP.Editing.MergeFeatures"
             mc:Ignorable="d" 
             d:DesignHeight="100.493"
             d:DataContext="{d:DesignInstance Type=local:MergeOperationSurvivorViewModel}" Width="304">

    <UserControl.Resources>
        <managedOptionsUi:OverrideToFontStyleConverter x:Key="OverrideToFontStyleConverter" />
    </UserControl.Resources>
    <StackPanel
	    ToolTip="{Binding ToolTip}" ToolTipService.ShowOnDisabled="True" >
        <StackPanel.Resources>
            <local:ComparisonConverter x:Key="ComparisonConverter" />
        </StackPanel.Resources>
        <RadioButton Content="Use larger feature" 
                     IsChecked="{Binding Path=CurrentValue, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static merge:MergeOperationSurvivor.LargerObject}}"
                     FontStyle="{Binding CentralizableSetting.HasLocalOverride, Mode=OneWay, Converter={StaticResource OverrideToFontStyleConverter}}" 
                     IsEnabled="{Binding CentralizableSetting.CanOverrideLocally}" 
                     Margin="6,6,0,2"/>

        <RadioButton Content="Use first selected feature" 
                     IsChecked="{Binding Path=CurrentValue, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static merge:MergeOperationSurvivor.FirstObject}}"
                     FontStyle="{Binding CentralizableSetting.HasLocalOverride, Mode=OneWay, Converter={StaticResource OverrideToFontStyleConverter}}" 
                     IsEnabled="{Binding CentralizableSetting.CanOverrideLocally}"
                     Margin="6,0,0,2"/>
    </StackPanel>
</UserControl>
